<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#F5F5F5">

    <!-- Imagen de perfil -->

    <!-- Nombre del usuario -->
    <ImageView
        android:id="@+id/foto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:contentDescription="Foto de perfil"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"/>

    <TextView
        android:id="@+id/VERIdNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="8dp"
        android:textColor="#333333"/>

    <!-- Email del usuario -->
    <TextView
        android:id="@+id/VEREmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@ejemplo.com"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:textColor="#777777"/>

    <!-- Descripción del usuario -->
    <TextView
        android:id="@+id/VERDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción del usuario"
        android:textSize="16sp"
        android:textColor="#555555"
        android:paddingBottom="24dp"/>

    <!-- Título de instrumentos -->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instrumentos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:textColor="#333333"/>

    <!-- Lista de instrumentos -->
    <TextView
        android:id="@+id/VERinstrumentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guitarra, Bajo, Batería"
        android:textSize="16sp"
        android:textColor="#555555"
        android:paddingBottom="24dp"/>

    <Button
        android:id="@+id/BtnInvitar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        android:text="Invitar a Tu banda " />


</LinearLayout>
